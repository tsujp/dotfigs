set $lalt Mod3
set $lsup Meta_L
set $rshift Shift_R


## - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
## VARIABLES - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# workspaces
