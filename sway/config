## KEY BINDINGS  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# reload sway config
bindsym $ralt+Shift+r reload

# kill focused window
bindsym $mod+Shift+q kill

# lock screen
bindsym $mod+Shift+x exec swaylock -f -c 000000

# exit sway (log out of wayland session)
